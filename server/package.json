    "express-validator": "7.0.1",
    "pg": "8.11.1",
    "pg-hstore": "2.3.4",
    "pino": "8.14.1",
    "pino-http": "8.3.3",
    "pino-pretty": "10.0.0",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.32.1",
    "sequelize-typescript": "2.1.5",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "4.6.3",
    "tsconfig-paths": "4.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@golevelup/ts-jest": "0.3.7",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.68",
    "@types/cors": "2.8.13",
