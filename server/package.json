  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest -c test/jest-e2e.json",
    "dev": "ts-node-dev --rs -r tsconfig-paths/register --poll src/app.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src",
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/app.js"
  },
  "keywords": [],
  "author": "",
